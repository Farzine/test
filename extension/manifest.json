{
    "manifest_version": 3,
    "name": "Ai Note Taker",
    "version": "1.0",
    "description": "Capture system audio during meetings and generate notes.",
    "permissions": [
        "tabs",
        "activeTab",
        "scripting",
        "identity",
        "storage",
        "tabCapture",
        "cookies"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "host_permissions": [
    "https://*/*", "http://localhost:3000/*"
    ],
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "run_at": "document_end"
      }
    ],
    "web_accessible_resources": [
    {
      "resources": ["libs/jsPDF/dist/jspdf.umd.min.js"],
      "matches": ["<all_urls>"]
    }
    ],
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
  